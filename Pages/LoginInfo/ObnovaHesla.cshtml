@page
@model VstupenkyWeb.Pages.LoginInfo.ObnovaHeslaModel
@{
    ViewData["Title"] = "Resetování hesla";
}

<h1>Resetování hesla</h1>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Email" value="@Model.Email" />
    <input type="hidden" asp-for="Token" value="@Model.Token" />
    <div class="form-group">
        <label for="NewPassword">Nové heslo:</label>
        <input type="password" class="form-control" asp-for="NewPassword" required>
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="ConfirmPassword">Potvrdit heslo:</label>
        <input type="password" class="form-control" asp-for="ConfirmPassword" required>
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Resetovat heslo</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}